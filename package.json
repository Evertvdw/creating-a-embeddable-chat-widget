{
  "name": "creating-a-embeddable-chat-widget",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "author": "Evert van der Weit",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./",
    "start": "node dist/server/index.js",
    "format": "prettier --write .",
    "portal": "cd ./packages/portal && quasar dev && cd ../..",
    "widget": "cd ./packages/widget && vite && cd ../..",
    "server": "cd ./packages/server && yarn start && cd ../..",
    "dev": "npm-run-all --parallel portal server widget",
    "build": "npm-run-all portal:build widget:build server:build",
    "portal:build": "cd ./packages/portal && quasar build && cd ../..",
    "widget:build": "cd ./packages/widget && vite build && cd ../..",
    "server:build": "cd ./packages/server && yarn build && cd ../..",
    "production:install": "cd ./dist && yarn -prod"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "16.x",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "devDependencies": {
    "bcrypt": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "yargs": "^17.4.1"
  }
}
